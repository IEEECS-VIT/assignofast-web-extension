{
    "manifest_version": 3,
    "name": "VTOP Digital Assignment Scraper",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://vtop.vit.ac.in/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://vtop.vit.ac.in/*",
        "https://assignofast-backend.vercel.app/*"
    ],
    "oauth2": {
        "client_id": "889572280066-jpfj7bgomgrq61c29qos4drj26pkooos.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/userinfo.profile"
        ]
    }
}