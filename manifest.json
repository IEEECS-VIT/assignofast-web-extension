{
    "manifest_version": 3,
    "name": "Assignofast",
    "version": "1.2.2",
    "description": "Your personal shield against deadline dread - Assignofast keeps you always ahead",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity",
        "identity.email",
        "webRequest",
        "alarms"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://vtop.vit.ac.in/vtop/content"
            ],
            "js": [
                "utils.js",
                "comparators.js",
                "formatters.js",
                "scraper.js",
                "api.js",
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://vtop.vit.ac.in/*",
        "https://api-ywtue46pfq-el.a.run.app/*"
    ],
    "oauth2": {
        "client_id": "217894681447-vgosg8r97un162qc3sm0757e4bff1hgm.apps.googleusercontent.com",

        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/userinfo.profile",
            "openid"
        ]
    }
}